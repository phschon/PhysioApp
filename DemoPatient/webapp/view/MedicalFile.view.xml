<mvc:View 
	controllerName="DemoPatient.DemoPatient.controller.MedicalFile" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:f="sap.ui.layout.form" 
	xmlns:l="sap.ui.layout"	
	xmlns:core="sap.ui.core"
	displayBlock="true" xmlns="sap.m"
	>
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<Toolbar>
						<ToolbarSpacer width="5%"/>
						<Button width="15%" icon="sap-icon://menu2"/>
						<ToolbarSpacer/>
						<Title level="Auto" text="Krankenakte"/>
						<ToolbarSpacer/>
						<Button width="15%" icon="sap-icon://customer" press="onDisplayProfile"/>
						<ToolbarSpacer width="5%"/>
					</Toolbar>					
					<content>

		<f:SimpleForm id="SimpleFormDisplay354wideDual"
			editable="false"
			layout="ResponsiveGridLayout"
			labelSpanXL="4"
			labelSpanL="3"
			labelSpanM="4"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="0"
			emptySpanL="4"
			emptySpanM="0"
			emptySpanS="0"
			columnsXL="2"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false" >
			<f:content>
				<core:Title text="Arzt" />
				<Label/>
				<Text text="Dr. Golger Feelgood" />
				<Label/>
				<Text text="Dossenheimer Landstraße 100" />
				<Label/>
				<Text text="69121 Heidelberg" />
				<Label/>
				<Text text="+49 6221 12345" />
				
				<core:Title text="Therapeut" />
				<Label/>
				<Text text="Diana Ross" />
				<Label/>
				<Text text="Dossenheimer Landstraße 200" />
				<Label/>
				<Text text="69121 Heidelberg" />
				<Label/>
				<Text text="+49 6221 67890" />
				
				<core:Title text="Diagnose" />
				<Label/>
				<Text text="Patellafraktur (Kniescheibenbruch)" />
				
			</f:content>
		</f:SimpleForm>



					</content>
					<footer>
						<OverflowToolbar>
							<ToolbarSpacer width="5%"/>
							<Button width="15%" icon="sap-icon://competitor" press="onDisplayProgress"/>
							<ToolbarSpacer/>
							<Button width="15%" icon="sap-icon://physical-activity" press="onDisplayTraining"/>
							<ToolbarSpacer/>
							<Button width="15%" icon="sap-icon://electronic-medical-record"/>
							<ToolbarSpacer width="5%"/>							
						</OverflowToolbar>
					</footer>					
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	controllerName="sapcp.cf.strongpeople.physioapp.controller.PatientsMasterList" xmlns:html="http://www.w3.org/1999/xhtml">
	
    <Page title="{i18n>pageTitlePatientsMasterList}" showFooter="{device>/isNoPhone}" showNavButton="true" navButtonPress="goBack">
        <subHeader>
            <OverflowToolbar>
                <SearchField
                    liveChange="onPatientSearch"
                    width="100%" />
            </OverflowToolbar>
        </subHeader>
        <headerContent>
			<Button
				icon="sap-icon://add-employee"
				tooltip="Add a patient"
				press="handleCreateNewPatient">
			</Button>
		</headerContent>
        <footer>
			<Toolbar>
			</Toolbar>
		</footer>
        <content>
            <List id="patientsList" 
                items="{allUsers>/}">
                <items>
                    <StandardListItem
                        id="patientListItemId"
                        title="{allUsers>firstName}"
                        description="{allUsers>email}"
                        icon="{allUsers>imageUrl}"
                        iconDensityAware="false"
                        iconInset="false"
                        type="Navigation"
                        press="onPatientPressMasterPage"/>
                </items>
            </List>
        </content>
    </Page>
</mvc:View>